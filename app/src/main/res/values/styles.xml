<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="QuickActionsMenu">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
    <style name="QuickActionsMenu.IconEntry" parent="@style/QuickActionsMenu">
        <item name="android:textSize">11.0sp</item>
        <item name="android:textColor">@drawable/quick_action_text_color_selector</item>
        <item name="android:background">@drawable/state_selector_background</item>
        <item name="android:paddingLeft">3.5dip</item>
        <item name="android:paddingRight">3.5dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>
